{
  "name": "auto-mapa-transferencia",
  "version": "0.0.1",
  "description": "Automações para o Mapa de Transferencia",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "start": "clear && node dist/app.js",
    "dev": "npm run build && npm run start",
    "compile": "npm run build && pkg . --out-path dist/bin"
  },
  "keywords": [],
  "author": "mgluizbrito",
  "license": "ISC",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/nodemailer": "^7.0.2",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/winston": "^2.4.4",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^2.1.0",
    "@hapi/boom": "^10.0.1",
    "@types/sqlite3": "^3.1.11",
    "@whiskeysockets/baileys": "^6.7.20",
    "dotenv": "^17.2.2",
    "googleapis": "^105.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.9",
    "qrcode-terminal": "^0.12.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0"
  },
  "bin": "dist/app.js",
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "logs/**/*",
      ".env",
      "servaccs-credentials.json"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist/bin"
  }
}
